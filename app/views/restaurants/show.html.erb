<h1>
  <%= @restaurant.name %>
</h1>

<p>
  <% @restaurant.reviews.each do |review| %>
  <%= "#{review.content}, #{review.rating}" %>
  <% end %>
</p>

<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :content %>
  <%= f.input :rating, collection: [0, 1, 2, 3, 4, 5] %>
  <%= f.submit %>
<% end %>


<%= link_to 'back', restaurants_path  %>
